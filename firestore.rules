rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }

    function isManager() {
        return request.auth.token.role == 'Manager' || request.auth.token.role == 'Admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /employees/{userId} {
      allow read: if isAdmin() || isManager() || isOwner(userId);
      allow write: if isAdmin();
    }
    
    match /organization/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /locations/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /roles/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /payGrades/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /jobDescriptions/{docId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }
    
    match /requisitions/{docId} {
      allow read: if isManager();
      allow write: if isManager();
    }

    match /referrals/{docId} {
      allow read: if isManager();
      allow write: if isManager();
    }

    match /talentPool/{docId} {
      allow read: if isManager();
      allow write: if isManager();
    }
  }
}
