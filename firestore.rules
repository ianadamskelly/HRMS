rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }

    function isManager() {
      return request.auth.token.role == 'Manager';
    }

    function isEmployee() {
      return request.auth.token.role == 'Employee';
    }

    // Organization data can be read by any authenticated user, but only written by admins.
    match /organization/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /locations/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /payGrades/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Employees can be read by any authenticated user, but only written by admins.
    match /employees/{employeeId} {
      allow read, write: if isAdmin();
    }
    
    // Roles can be read by any authenticated user, but only written by admins.
    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Recruitment data can be read by authenticated users, but only written by Admins or Managers.
    match /jobDescriptions/{jdId} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || isManager();
    }
    
    match /requisitions/{reqId} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || isManager();
    }

    match /referrals/{refId} {
        allow read: if request.auth != null;
        allow write: if isAdmin() || isManager();
    }

    match /talentPool/{tpId} {
        allow read: if request.auth != null;
        allow write: if isAdmin() || isManager();
    }
  }
}
