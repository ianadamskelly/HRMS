rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to check user roles from custom claims
    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }
    
    function isManager() {
      return request.auth.token.role == 'Manager';
    }
    
    function isEmployee() {
      return request.auth.token.role == 'Employee';
    }
    
    // Organization, Departments, and Locations can be managed by any authenticated user
    match /organization/{docId} {
      allow read, write: if request.auth != null;
    }

    match /departments/{deptId} {
      allow read, write: if request.auth != null;
    }
    
    match /locations/{locId} {
      allow read, write: if request.auth != null;
    }
    
    // Employee collection:
    // - Admins can read/write all employee records.
    // - Managers can read their direct reports.
    // - Employees can read/update their own record.
    match /employees/{userId} {
      allow read: if isAdmin() || request.auth.uid == userId || (isManager() && get(/databases/$(database)/documents/employees/$(userId)).data.managerId == request.auth.uid);
      allow write: if isAdmin() || request.auth.uid == userId;
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Roles collection:
    // - Admins can manage roles.
    // - Authenticated users can read role definitions.
    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Default deny all other collections - THIS IS A CATCH-ALL
    // It is important that this rule is last.
    // Any new collection needs an explicit rule block above this one.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}