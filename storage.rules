rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are organized by user folders
    match /users/{userId}/{allPaths=**} {
      // Allow read and write access only if the user is authenticated and the userId matches their own UID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public folder for assets that anyone can read
    match /public/{allPaths=**} {
      allow read;
      allow write: if false; // No one can write to the public folder
    }

    // Fallback rule to deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
